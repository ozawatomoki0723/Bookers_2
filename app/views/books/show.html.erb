<div class="row">
	<%= render "users/list"%>
	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr>
				<td>
					<%= link_to user_path(@booker.user.id), class: "user_#{@booker.user_id}" do %>
					<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "bookimage img-circle pull-left profile-thumb" %>
					<%= @booker.user.username %>
					<% end %>
				</td>
				<td><%= @booker.title %></td>
				<td><%= @booker.body%></td>
				<% if @booker.user_id == current_user.id %>
				<td><%= link_to  "Edit",edit_book_path(id: @booker.id), class: "edit_book_#{@booker.id}"%></td>
				<td><%= link_to "Destroy", book_path(@booker.id), method: :delete,"data-confirm" => "本当に削除しますか？", class: "destroy_book_#{@booker.id}" %>
				</td>
				<% end %>
			</tr>
		</table>
	</div>
</div>