<div class='body'>
  <div class='container'>
  	<div class='row'>
  	  <div class='books-edit col-md-6 col-md-offset-3 '>

      <h2>Editing Book</h2>

      <%= form_for(@books) do |f| %>
      <div class='errors-ms'>
      <% if @books.errors.any? %>
        <div id="error_explanation">
          <h2><%= @books.errors.count %>errors prohibited obj from being saved:</h2>
          <ul>
          <% @books.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      </div>

      <div class='filed row'>
        <label for='book_title'>Title</label>
        <%= f.text_field :title,class:'col-xs-12' %>
      </div></br>
      <div class='filed row'>
        <label for='book_body'>Opinion</label>
        <%= f.text_area :body,class:'col-xs-12' %>
      </div></br>
      <div class="actions row">
        <%= f.submit 'Update Book',class:'col-xs-12 btn btn-primary' %>
      </div></br>
      <% end %>

      <%= link_to 'Show' ,book_path(id: @books) %> |
      <%= link_to 'Back' ,books_path %>
      </div>
    </div>
  </div>
</div>

<footer>
  <%= render 'temple/footer' %>
</footer>